<div class="banner">
  <h3>Simple Airbnb</h3>
  <div><%= link_to "Add Flat", new_flat_path %></div>
</div>
<div class="container">
  <h1>All Our Flats</h1>
   <ul>
      <% @flats.each do |flat| %>
          <li>
            <img src="https://picsum.photos/250/200" alt="">
            <div class="pad">
              <div class="title"><%= "#{flat.name}" %></div>
              <br>
              <div class="adress"><%= "#{flat.address}" %></div>
              <br>
              <div class="description"><%= "#{flat.description}" %></div>
              <br>
              <div class="bottom"><%= "#{flat.price_per_night}" %> <i class="fas fa-euro-sign"></i> <%=  "#{flat.number_of_guests}" %><i class="fas fa-user-friends"></i> </div>
            </div>

            <br>
            <div class="links">
              <div class="link1"><%= link_to "More Info", flat_path(flat) %></div>
              <div class="link2"><%= link_to "Update", edit_flat_path(flat) %></div>
              <div class="link3"><%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %></div>
            </div>


          </li>
      <% end %>
    </ul>
</div>
